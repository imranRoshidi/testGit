<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chicken">


    <ImageView
        android:id="@+id/berempah"
        android:layout_marginTop="10dp"
        android:layout_width="211dp"
        android:layout_height="115dp"
        android:src="@drawable/berempah" />

    <Button
        android:id="@+id/btn_berempah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/berempah"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="ayam_berempah" />

    <ImageView
        android:id="@+id/kicap"
        android:layout_width="169dp"
        android:layout_height="115dp"
        android:layout_alignLeft="@id/berempah"
        android:layout_alignEnd="@id/berempah"
        android:layout_gravity="right"
        android:layout_marginLeft="227dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-175dp"
        android:src="@drawable/ayamkicap" />

    <Button
        android:id="@+id/btn_kicap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kicap"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="9dp"
        android:text="Ayam Kicap" />

    <ImageView
        android:id="@+id/rendang"
        android:layout_width="180dp"
        android:layout_height="103dp"
        android:layout_below="@id/btn_berempah"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/rendang" />
    <Button
        android:id="@+id/btn_rendang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rendang"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:text="Rendang Ayam" />

    <ImageView
        android:layout_below="@id/btn_kicap"
        android:id="@+id/kunyit"
        android:layout_width="169dp"
        android:layout_height="115dp"
        android:layout_alignLeft="@id/berempah"
        android:layout_alignEnd="@id/berempah"
        android:layout_gravity="right"
        android:layout_marginLeft="227dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-175dp"
        android:src="@drawable/kunyit" />

    <Button
        android:id="@+id/btn_kunyit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kunyit"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="9dp"
        android:text="Ayam Kunyit" />

    <ImageView
        android:id="@+id/ladahitam"
        android:layout_width="180dp"
        android:layout_height="103dp"
        android:layout_below="@id/btn_kicap"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="192dp"
        android:src="@drawable/ladahitam" />

    <Button
        android:id="@+id/btn_ladahitam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ladahitam"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:text="Ayam Lada Hitam" />

    <ImageView
        android:id="@+id/masakmerah"
        android:layout_width="176dp"
        android:layout_height="100dp"
        android:layout_below="@id/btn_kunyit"
        android:layout_alignLeft="@id/berempah"
        android:layout_alignEnd="@id/berempah"
        android:layout_gravity="right"
        android:layout_marginLeft="227dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-181dp"
        android:src="@drawable/masakmerah" />

    <Button
        android:id="@+id/btn_masakmerah"
        android:layout_width="168dp"
        android:layout_height="69dp"
        android:layout_below="@id/masakmerah"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"
        android:text="Ayam Masak Merah" />


</RelativeLayout>