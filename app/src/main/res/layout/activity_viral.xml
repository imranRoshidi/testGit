<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viral">


    <ImageView
        android:id="@+id/dalgona"
        android:layout_marginTop="10dp"
        android:layout_width="211dp"
        android:layout_height="115dp"
        android:src="@drawable/dalgona2" />

    <Button
        android:id="@+id/btn_dalgona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dalgona"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        android:text="Dalgona" />

    <ImageView
        android:id="@+id/caramel"
        android:layout_width="169dp"
        android:layout_height="115dp"
        android:layout_alignLeft="@id/dalgona"
        android:layout_alignEnd="@id/dalgona"
        android:layout_gravity="right"
        android:layout_marginStart="227dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-175dp"
        android:src="@drawable/caramelcustard" />

    <Button
        android:id="@+id/btn_caramel"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/caramel"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="235dp"
        android:layout_marginTop="9dp"
        android:text="Mustard Caramel" />

    <ImageView
        android:id="@+id/murtabak"
        android:layout_width="180dp"
        android:layout_height="103dp"
        android:layout_below="@id/btn_dalgona"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/maggimurtabak" />
    <Button
        android:id="@+id/btn_murtabak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/murtabak"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="9dp"
        android:text="Murtabak Maggi" />

    <ImageView
        android:id="@+id/biscuit"
        android:layout_width="173dp"
        android:layout_height="104dp"
        android:layout_below="@id/btn_caramel"
        android:layout_alignLeft="@id/murtabak"
        android:layout_alignEnd="@id/murtabak"
        android:layout_gravity="right"
        android:layout_marginLeft="209dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="-202dp"
        android:src="@drawable/honeybiscuit" />

    <Button
        android:id="@+id/btn_biscuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/biscuit"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="9dp"
        android:text="Honey biscuit" />




</RelativeLayout>